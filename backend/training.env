# Training Mode Environment Configuration
# Set this file to enable training mode and prevent API conflicts

# Enable training mode (prevents FastAPI from loading models)
TRAINING_MODE=true

# GPU configuration for training
CUDA_VISIBLE_DEVICES=0

# Training-specific settings
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
TORCH_CUDNN_V8_API_ENABLED=1

# Memory management
PYTORCH_NO_CUDA_MEMORY_CACHING=1

# Logging level for training
LOG_LEVEL=INFO
